<button class="play-pause" {{action 'toggle'}}>
  {{#if isPlaying}}
    {{nypr-svg icon='pause' className='playlist-pause'}}
  {{else if isLoading}}
    {{!-- #0b9ca5 is $teal --}}
    {{animated-loading-icon
      class='playlist-loading'
      color='#0b9ca5'
      width=14
      height=17
      outerScale=6
      innerScale=2
      radius=0.025
      dotRadius=0.25
      lineWidth=1.5}}
  {{else}}
    {{nypr-svg icon='play' className='playlist-play'}}
    {{#if hasBlock}}{{yield}}{{/if}}
  {{/if}}
</button>
